{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.js",
    "app/layout.jsx",
    "app/page.jsx",
    "components/Footer.jsx",
    "constants/index.js",
    "components/Navbar.jsx",
    "tailwind.config.js",
    "components/Commons/Button.jsx",
    "components/Testimonial.jsx",
    "components/Nav/animaion.js",
    "jsconfig.json"
  ],
  "exclude": ["node_modules"]
}
